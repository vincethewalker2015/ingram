<!DOCTYPE html>
<html>
  <head>
    <title>Instagram</title>
    <%= csrf_meta_tags %>
    

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--Navigation Bar-->
    <nav class="navbar navbar-light bg-light d-flex">
      <div class="container">
        <div class="logo">
          <a class="navbar-brand" href="#">
            <%= fa_stacked_icon "camera inverse", base: "circle"%>
            Instagram
          </a>
        </div>
        <div class="m-auto">
          <form class="form-inline search-form">
            <input class="form-control mr-sm-2 searcher" type="search" placeholder="@search" aria-label="Search">
          </form>
        </div>
        <div class="user-section pull-right fonties">
          <a><i class="fa fa-compass"></i></a>
          <a><i class="fa fa-heart"></i></a>
          <% if user_signed_in? %>
            <%= link_to "Logout", destroy_user_session_path, class: "btn btn-default" %> 
             
            
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "btn btn-default" %> 
             
            
          <% end %>
        </div>
      </div>
    </nav>
    
    <main class="container" style="min-height: 500px;">
      <%= yield %>
    </main>
    
    <footer class="container footer">
      <div align="center">
        <nav class="navbar d-flex">
        <ul>
          <li>ABOUT US
          </li>
          <li>SUPPORT</li>
          <li>PRESS</li>
          <li>API</li>
          <li>JOBS</li>
          <li>PRIVACY</li>
          <li>TERMS</li>
          <li>DIRECTORY</li>
          <li>PROFILES</li>
          <li>HASHTAGS</li>
          <li>LANGUAGE</li>
        </ul>
        <p> Â© 2018 vincethewalker.com </p>
      </nav>
      </div>
    </footer>
  </body>
</html>
